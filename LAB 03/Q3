#include<stdio.h>

int main(){
int num1;
float taxrate;
float salary;
float remainder;
float tax;
printf("Enter current salary: ");
scanf("%f", &salary);
printf("Enter current tax rate: ");
scanf("%f", &taxrate);
tax = (salary * taxrate);
remainder = (salary - tax);
printf("The total tax on your salary is %f", tax);
printf("\nYour remaining salary is %f", remainder);
return 0;
}
