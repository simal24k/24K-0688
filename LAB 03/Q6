#include<stdio.h>

int main(){
float x1;
float x2;
float y1;
float y2;
float m;
float my;
float mx;
printf("First pair of coordinates: ");
printf("\nEnter the x-coordinate: ");
scanf("%f",&x1);
printf("Enter the y-coordinate: ");
scanf("%f", &y1);
printf("\nSecond pair of coordinates:  ");
printf("\nEnter the x-coordinate: ");
scanf("%d",&x2);
printf("Enter the y-coordinate: ");
scanf("%f", &y2);
my = (y2-y1);
mx = (x2-x1);
m = (my/mx);
printf("\n The gradient is %.3f",m);

return 0;
}
